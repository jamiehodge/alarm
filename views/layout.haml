!!! 5
%html{ lang: 'en' }
	%head
		%title= @title || 'Alarm'
		%link{ href: '/stylesheets/app.css', rel: 'stylesheet', type: 'text/css' }
	%body
		#container
			%header
				%hgroup
					%a{ :href => '/' }
						%h1= 'Alarm' || @title
			%nav
				%ul
					- root.entries[0..-2].each do |entry|
						%li
							%a{ href: entry.path }= entry.title
			%div{ role: 'main' }
				= yield
			%footer
				Copyright #{root.rights}
				%address
					%a{ href: "mailto:#{root.author_email}" }= root.author_email