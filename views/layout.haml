!!! 5
%html{ :lang => session[:locale] }
	%head
		%meta{ :charset => "utf-8" }/
		
		%meta{ :content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }/
		
		%title= settings.title
		%meta{ :content => "An Internet portal for the Podcast Producer Feed Library", :name => "description" }/
		%meta{ :content => "Jamie Hodge", :name => "author" }/
		
		%meta{ :content => "width=device-width, initial-scale=1", :name => "viewport" }/
		
		:javascript
			document.documentElement.className = "js";
		
		%link{ :href => url_for("/stylesheets/screen.css?v=1"), :media => "all", :rel => "stylesheet" }/
		
		%script{ :src => url_for("/javascripts/modernizr.min.js") }
	%body{ :lang => session[:locale] }
		#page
			#slideshow
				- latest_feed.entries.collect { |e| e.comments }.flatten.each do |comment|
					%a{ :href => url_for("/atom_feeds/#{latest_feed.id}##{comment.entry_id}") }
						%blockquote
							= '&#8220;' + comment.content[0..200] + '...&#8221;'
							= comment.author
			%header
				%hgroup
					%a{ :href => url_for('/') }
						%h1= root.title
			%nav#latest
				%h2= t.nav.latest
				= haml :latest, :locals => { :latest => latest }
			#content
				#main
					= yield
			%nav#browse
				%h2= t.nav.browse
				%ul
					- root.entries[0..-3].each do |entry|
						%li
							%a{ :href => url_for(entry.path) }= entry.title
			%a{ :href => 'http://www.larm-archive.org' }
				%img{ :src => 'http://larm.media.hum.ku.dk/wp-content/themes/larm/images/logo.png' }
			%footer
				%address
					%a{ :href => "mailto:#{root.author_email}" }= root.rights
					
					
					
		%script{ :src => "http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js" }
		
		:javascript
			!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/jquery.min.js"%3E%3C/script%3E'))

		%script{ :src => url_for("/javascripts/script.js?v=1") }
		
		%script{ :src => url_for("/javascripts/jquery.cookie.js") }
		%script{ :src => url_for("/javascripts/jquery.collapse.js") }
		
		%script{ :src => url_for("/javascripts/jquery.cycle.lite.min.js") }
		
		%script{ :src => url_for("/javascripts/jquery.noisy.js") }
		
		:javascript
			var _gaq = [['_setAccount', '#{settings.google_analytics}'], ['_trackPageview']];
			(function(d, t) {
				var g = d.createElement(t),
					s = d.getElementsByTagName(t)[0];
				g.async = true;
				g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				s.parentNode.insertBefore(g, s);
			})(document, 'script');