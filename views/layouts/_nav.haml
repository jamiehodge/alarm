%h3= t.nav.browse
%ul
	- catalogs.each do |catalog| 
		%a{ :href => "/catalogs/#{catalog.uuid}" }
			%li= catalog.title
%h3= t.nav.admin
%ul
	- if authenticated?
		%li
			%a{ :href => '/logout' }= t.nav.log_out
		- if request.path_info.split('/').last == 'edit'
			%li
				%a{ :href => url("#{request.path_info[0..-6]}") }= t.nav.view_page
		- else
			%li
				%a{ :href => url("#{request.path_info}/edit") }= t.nav.edit_page
	- else
		%li
			%a{ :href => '/login'}= t.nav.log_in
		%li
			%a{ :href => settings.pcp['capture'] }= t.nav.capture
%h3 Locale
%ul
	- r18n.available_locales.each do |locale|
		%li
			%a{ :href => "#{request.path_info}?locale=#{locale.code}" }= locale.title